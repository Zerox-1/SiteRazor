@page "{id:int?}"
@model Site.Pages.Rooms.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Adress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Adress)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Landlord)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Landlord)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Duration)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Duration)
        </dd>
        <p>
            @if(Model.fl && Model.Room!=null && Model.nw.Role==1)
            {
                @if (Model.Room.Rented == 0)
                {
                    <form method="post">
                        <button asp-page-handler="Rent">Арендовать</button>
                </form>
                }
            }
        </p>
    </dl>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>
